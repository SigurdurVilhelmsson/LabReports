{
  "name": "lab-report-assistant",
  "version": "3.0.0",
  "description": "AI-powered lab report grading and writing assistance for chemistry teachers and students",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "check:status": "npm run check:security && npm run check:deps && npm run check:quality",
    "check:security": "npm audit --audit-level=moderate",
    "check:deps": "npm outdated || true",
    "check:quality": "npm run lint && npm run type-check"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@azure/msal-browser": "^4.26.2",
    "@azure/msal-react": "^3.0.22",
    "formidable": "^3.5.1",
    "lucide-react": "^0.555.0",
    "pdfjs-dist": "^4.0.379",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@netlify/functions": "^2.4.1",
    "@types/formidable": "^3.4.5",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/node": "^3.0.14",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
